<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="M2T">
    <property name="ECLIPSE_HOME" value="../../../../../eclipse/modeling-2024-09/Eclipse.app/Contents/Eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../../../../../eclipse-workspace"/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="M2T.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/M2T/bin"/>
    </path>

    <path id="M2T.classpath">
        <path refid="M2T.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="M2T.libraryclasspath.alljars">
        <pathelement location="../M2T/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="M2T.classpath.alljars">
        <path refid="M2T.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="M2T.main.Generate" classpathref="M2T.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="M2T.main.Generate" classpathref="M2T.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
